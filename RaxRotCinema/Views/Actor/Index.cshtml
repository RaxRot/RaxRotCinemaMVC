
@model List<Actor>

<div class="container">

   

    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Actors List
            </h2>
        </div>

        <div class="col-6 text-end">
            <a asp-controller="Actor"
               asp-action="Create"
               class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create Actor
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped">

        <thead>
            <tr>
                <th>ProfilePictureURL</th>
                <th>FullName</th>
                <th>Short Info</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var actor in Model)
            {
                <tr>
                    <td>
                        <img class="rounded-circle" src="@actor.ProfilePictureURL" alt="@actor.FullName" width="150" height="150" />
                    </td>
                    <td>@actor.FullName</td>
                    <td>@actor.ShortBio</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Actor" asp-action="Edit" asp-route-id="@actor.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>

                            <a asp-controller="Actor" asp-action="Delete" asp-route-id="@actor.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash3-fill"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>

    </table>

</div>
