@model List<Cinema>

<div class="container">

    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Cinema List
            </h2>
        </div>

        <div class="col-6 text-end">
            <a asp-controller="Cinema"
               asp-action="Create"
               class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create Cinema
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped">

        <thead>
            <tr>
                <th>CinemaLogo</th>
                <th>Name</th>
                <th>Description</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cinema in Model)
            {
                <tr>
                    <td>
                        <img class="rounded-circle" src="@cinema.Logo" alt="@cinema.Logo" width="150" height="150" />
                    </td>
                    <td>@cinema.Name</td>
                    <td>@cinema.Description</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Cinema" asp-action="Edit" asp-route-id="@cinema.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>

                            <a asp-controller="Cinema" asp-action="Delete" asp-route-id="@cinema.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash3-fill"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>

    </table>

</div>
